{
  "name": "PracticePilot",
  "version": "0.2.0",
  "manifest_version": 3,
  "description": "In-page benefits breakdown assistant for dental practice management. Read-only guidance + copy helpers for eligibility and insurance workflows.",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "sidePanel"
  ],
  "host_permissions": [
    "https://*.curvehero.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "PracticePilot",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png"
    }
  },
  "side_panel": {
    "default_path": "ui/sidepanel.html"
  },
  "content_scripts": [
    {
      "matches": ["https://*.curvehero.com/*"],
      "exclude_matches": ["https://*.sso.curvehero.com/*"],
      "js": [
        "content/page-detector.js",
        "content/main.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["icons/*"],
      "matches": ["<all_urls>"]
    }
  ]
}
